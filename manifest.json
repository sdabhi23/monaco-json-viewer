{
    "name": "JSON Formatter",
    "version": "0.1.0",
    "manifest_version": 2,
    "description": "Makes JSON easy to read. Open source.",
    "homepage_url": "https://github.com/callumlocke/json-formatter",
    "minimum_chrome_version": "21",
    "icons": {
        "128": "icons/128.png",
        "32": "icons/32.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "*://*/*",
        "<all_urls>",
        "storage"
    ],
    "web_accessible_resources": [
        "monaco/*",
        "editor.html",
        "editor.js"
	]
}